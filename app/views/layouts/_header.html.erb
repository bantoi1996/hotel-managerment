<style type="text/css">
  div#menu div {
    height: 100% !important;
  }
</style>
<header class="navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="row" id="menu">
      <div class="col-sm-1">
        <%= link_to image_tag("logo.jpg", alt: "logo", :size => "40x40"), root_path, id: "logo" %>
      </div>
      <div class="col-sm-3" id="search-menu">
        <form action="#" style="padding-top: 9px">
          <input class="form-control" type="text" id="search" style="width: 83%; display: inline-block;">
          <button class="btn btn-link search-btn" style="width: 15%; display: inline-block;">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </form>
      </div>

      <div class="col-sm-8">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("home"), root_path %></li>
          <li><%= link_to t("hotel"), hotels_path %></li>
          <li><%= link_to t("room"), rooms_path %></li>
          <li><%= link_to t("sign_up"), signup_path %></li>
          <% if logged_in? %>
            <li><%= link_to t("users"), '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "account" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("settings"), '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("log_out"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("log_in"), login_path %></li>
          <% end %>
          <li><%= link_to image_tag("en.jpg", alt: "en", :size => "30x20"), locale: "en" %></li>
          <li><%= link_to image_tag("vn.jpg", alt: "vn", :size => "30x20"), locale: "vi" %></li>

        </ul>
      </div>
    </div>
  </div>
</header>
