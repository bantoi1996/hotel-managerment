<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> | <%= t "hotel_ma" %></title>
    <%= render "layouts/shim" %>
    <%= render "layouts/rails_default" %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
      <% end %>
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
